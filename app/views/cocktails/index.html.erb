<div class="container">
  <h1 class="title">Mr. Cocktail</h1>

  <div class="container mt-3">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-6 col-md-4 col-lg-3 mt-3">
          <div class="card">
            <img class="card-img-top" src=<%= cocktail.image %> alt="Cocktail image">
              <div class="card-body bg-light">
              <h3 class="card-title"><strong><%= link_to cocktail.name, cocktail_path(cocktail) %></strong></h3>
              </div>
          </div>
        </div>
      <% end %>

  
    </div>
  </div>
  <ul>
  </ul>

  <%= link_to "Create a new Cocktail", new_cocktail_path %>

</div>