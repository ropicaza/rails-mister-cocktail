<div class="banner d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1525268323446-0505b6fe7778?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=752&q=80');">
  <h1 class="title">Mister Cocktail</h1>
</div>

  <div class="container mt-3 mb-3">
    <div class="row  justify-content-center">
      <% @cocktails.each do |cocktail| %>
        <div class="col-6 col-md-4 col-lg-3 mt-3">
          <div class="card">
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag cocktail.photo.key, class: "card-img-top", alt:"Cocktail image", crop: :thumb %>
            <% else %>
              <img src="https://www.timandorra.com/wp-content/uploads/2016/11/Imagen-no-disponible.png" alt="cocktail image">
            <% end %>
              <div class="card-body bg-light">
                <h3 class="card-title"><strong><%= link_to cocktail.name, cocktail_path(cocktail) %></strong></h3>
                <p><%= link_to  "Delete", cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } %></p>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <ul>
  </ul>
</div>